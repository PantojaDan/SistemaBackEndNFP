<div class="modal-lista mostrar-lista"><!--Ahorita lo oculto-->
        <div class="form-lista">
            
            <form action="/dashboard/micocina/{{id_inventario}}/editar/{{id_producto}}" class="form-lista-add" method="post">
                <a href="/dashboard/micocina/{{id_inventario}}"><span id="close-modal-cocina">X</span></a>
                <label for="nombre_pro">Nombre del producto:</label>
                <input type="text" name="nombre_pro" value="{{nombre_pro}}" id="nombre_pro-edit-cocina">
    
                <label for="cantidad">Cantidad:</label>
                <input type="number" name="cantidad" value="{{cantidad}}" min="0" id="cantidad-edit-cocina">

                <label for="cantidad_min">Cantidad minima:</label>
                <input type="number" name="cantidad_min" value="{{cantidad_min}}" min="1" id="cantidad_min-edit-cocina">

                <label for="fecha_caducidad">Fecha caducidad:</label>
                <input type="date" name="fecha_caducidad" id="fecha-lista-edit-cocina" value="{{fecha_caducidad}}">

                <div id="botones-cocina-editar">
                    <span id="btn-edit-cocina-validar">Validar</span>
                    <button id="btn-edit-cocina-actualizar" class="quitar-btn">Actualizar</button>
                </div>
            
            </form>
        </div>
    </div>


    <div class="container-error-signup ocultar-signup">
        <div class="error-form-signup">
            <i class="fa-regular fa-circle-xmark"></i>
            <div class="errores-signup">
                <b>Tienes los siguientes errores:</b>
                <ul id="errores-ul">
                </ul>      
            </div>
        </div>
    </div>